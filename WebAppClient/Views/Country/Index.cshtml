@model IEnumerable<WebAppClient.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<button class="btn btn-primary" onclick="addModalCountry()" data-toggle="modal" data-target="#modalCountry">Create New</button>
<table class="table table-striped table-dark" id="dataTablesCountry">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
</table>

<div class="modal fade" id="modalCountry" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="modalContentCountry">
            </div>
        </div>
    </div>
</div>
